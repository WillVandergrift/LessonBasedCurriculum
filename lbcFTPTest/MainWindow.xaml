<Window x:Class="lbcFTPTest.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
				Title="MainWindow" Height="350" Width="525">
		<Grid>
        <telerik:RadButton Content="FTP Connect" Height="49" HorizontalAlignment="Left" Margin="12,250,0,0" Name="btnConnect" VerticalAlignment="Top" Width="149" Click="btnConnect_Click" />
        <telerik:RadButton Content="Disconnect" Height="49" HorizontalAlignment="Left" Margin="342,250,0,0" Name="btnDisconnect" VerticalAlignment="Top" Width="149" />
        <telerik:RadButton Content="Download" Height="46" HorizontalAlignment="Left" Margin="12,12,0,0" Name="btnDownload" VerticalAlignment="Top" Width="181" Click="btnDownload_Click" />
        <Label Content="Progress: " Height="28" HorizontalAlignment="Left" Margin="219,41,0,0" Name="lblProgressHeader" VerticalAlignment="Top" />
        <Label Content="Downloading:" Height="28" HorizontalAlignment="Left" Margin="219,12,0,0" Name="lblFileHeader" VerticalAlignment="Top" />
        <Label Content="&lt; File &gt;" Height="28" HorizontalAlignment="Left" Margin="309,12,0,0" Name="lblFile" VerticalAlignment="Top" />
        <Label Content="&lt; Progress &gt;" Height="28" HorizontalAlignment="Left" Margin="309,41,0,0" Name="lblProgress" VerticalAlignment="Top" />
    </Grid>
</Window>
